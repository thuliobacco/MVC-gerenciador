<!DOCTYPE html>
<html>
<head>
    <title>Teste de CSS e JS</title>
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-family: Arial, sans-serif;
            padding: 2rem;
            min-height: 100vh;
        }
        
        .test-card {
            background: white;
            color: #333;
            padding: 2rem;
            border-radius: 15px;
            margin: 1rem 0;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        
        .btn-test {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 25px;
            font-size: 1rem;
            cursor: pointer;
            margin: 0.5rem;
            transition: all 0.3s ease;
        }
        
        .btn-test:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }
        
        .success {
            background: #4ade80;
            color: white;
            padding: 1rem;
            border-radius: 10px;
            margin: 1rem 0;
        }
        
        .error {
            background: #f87171;
            color: white;
            padding: 1rem;
            border-radius: 10px;
            margin: 1rem 0;
        }
    </style>
</head>
<body>
    <div class="test-card">
        <h1>🧪 Página de Teste - TaskFlow</h1>
        <p>Se você está vendo esta página colorida, o CSS está funcionando!</p>
        
        <h2>Teste de Botões</h2>
        <button class="btn-test" onclick="testAlert()">
            🔔 Testar Alert
        </button>
        
        <button class="btn-test" onclick="testAPI()">
            🌐 Testar API
        </button>
        
        <button class="btn-test" onclick="testNotification()">
            📢 Testar Notificação
        </button>
        
        <div id="test-results"></div>
        
        <h2>Links para o Sistema</h2>
        <a href="/" class="btn-test" style="display: inline-block; text-decoration: none;">
            🏠 Ir para Dashboard
        </a>
    </div>

    <script>
        console.log('🚀 JavaScript carregado com sucesso!');
        
        function testAlert() {
            alert('✅ JavaScript está funcionando!');
            showResult('JavaScript está funcionando!', 'success');
        }
        
        async function testAPI() {
            try {
                const response = await fetch('/tasks');
                if (response.ok) {
                    const data = await response.json();
                    showResult(`✅ API funcionando! ${data.length} tarefas encontradas`, 'success');
                } else {
                    showResult(`❌ API retornou erro: ${response.status}`, 'error');
                }
            } catch (error) {
                showResult(`❌ Erro na API: ${error.message}`, 'error');
            }
        }
        
        function testNotification() {
            showResult('✅ Sistema de notificações funcionando!', 'success');
        }
        
        function showResult(message, type) {
            const results = document.getElementById('test-results');
            const div = document.createElement('div');
            div.className = type;
            div.textContent = message;
            results.appendChild(div);
            
            // Auto remover após 5 segundos
            setTimeout(() => {
                div.remove();
            }, 5000);
        }
        
        // Teste automático ao carregar
        document.addEventListener('DOMContentLoaded', function() {
            showResult('✅ Página carregada com sucesso!', 'success');
        });
    </script>
</body>
</html>